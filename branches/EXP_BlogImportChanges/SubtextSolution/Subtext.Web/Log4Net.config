<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
		<to value="haacked@gmail.com" />
		<from value="haacked@haacked.com" />
		<subject value="Error occurred in Haacked.com" />
		<smtpHost value="mail.haacked.com" />
		<bufferSize value="256" />
		<lossy value="true" />
		<evaluator type="log4net.spi.LevelEvaluator">
			<threshold value="ERROR" />
		</evaluator>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-5p %d [ThreadId: %t] Class:%c{1} Method:%M %nMESSAGE:%n%m%n%n" />
		</layout>
	</appender>
	
	<appender name="AdoNetAppender" type="log4net.Appender.AdoNetAppender">
		<bufferSize value="1" />
		<evaluator type="log4net.spi.LevelEvaluator">
			<threshold value="DEBUG" />
		</evaluator>
		<connectionType value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.3300.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
		<connectionString value="Configured in Web.config" />
		<commandType value="StoredProcedure" />
		<commandText value="subtext_AddLogEntry" />
		<parameter>
			<parameterName value="@BlogId" />
			<dbType value="Int32" />
			<layout type="log4net.Layout.PatternLayout" value="%X{BlogId}" />
		</parameter>
		<parameter>
			<parameterName value="@Date" />
			<dbType value="DateTime" />
			<layout type="log4net.Layout.PatternLayout" value="%date{yyyy'-'MM'-'dd HH':'mm':'ss'.'fff}" />
		</parameter>
		<parameter>
			<parameterName value="@Thread" />
			<dbType value="String" />
			<size value="255" />
			<layout type="log4net.Layout.PatternLayout" value="%.255thread" />
		</parameter>
		<parameter>
			<parameterName value="@Context" />
			<dbType value="String" />
			<size value="512" />
			<layout type="log4net.Layout.PatternLayout" value="%.512ndc" />
		</parameter>
		<parameter>
			<parameterName value="@Level" />
			<dbType value="String" />
			<size value="20" />
			<layout type="log4net.Layout.PatternLayout" value="%.20level" />
		</parameter>
		<parameter>
			<parameterName value="@Logger" />
			<dbType value="String" />
			<size value="256" />
			<layout type="log4net.Layout.PatternLayout" value="%.256logger" />
		</parameter>
		<parameter>
			<parameterName value="@Message" />	
			<dbType value="String" />
			<size value="2000" />
			<layout type="log4net.Layout.PatternLayout" value="%.2000message" />
		</parameter>
		<parameter>
			<parameterName value="@Exception" />
			<dbType value="String" />
			<size value="1000" />
			<layout type="log4net.Layout.ExceptionLayout" />
		</parameter>
		
   </appender>
	
	<root>
		<!-- Set this to "WARN" before release -->
		<level value="DEBUG" />
		<appender-ref ref="AdoNetAppender" />
		<!-- <appender-ref ref="SmtpAppender" /> -->
	</root>
</log4net>
