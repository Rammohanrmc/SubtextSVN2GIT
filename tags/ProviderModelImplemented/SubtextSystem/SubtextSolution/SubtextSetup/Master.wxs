                            ConfirmOverwrite="yes"
                            DropOnInstall="no"
                            DropOnUninstall="no" 
                            User="SqlUser" 
                            ContinueOnError="yes">	
								<SqlScript Id="CreateTables" ExecuteOnInstall="yes" BinaryKey="SqlInstallationScript" />
                        </SqlDatabase>
                        
                        <User Id="SqlUser"
							CreateUser="yes"
							FailIfExists="no"
							Name="SubtextUser"
							Password="!subt3xt!"
							RemoveOnUninstall="no"
							UpdateIfExists="no">
                        </User>
