<configuration>
	<appSettings>
		<add key="Subtext.MasterPages.TemplateFile" value="~/HostAdmin/PageTemplate.ascx" />
		<add key="Subtext.MasterPages.DefaultContent" value="MPContent" />
	</appSettings>

    <system.web>
    
		<!-- ===========================================================================
		This setting is configured so that only authenticated users can visit any of the
		pages in the HostAdmin directory.
		============================================================================ -->
		<authorization>
			<allow roles="HostAdmins" />
			<deny users="*" />
		</authorization>
    </system.web>

	<location path="login.aspx">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>
	
	<location path="images">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>

	<location path="scripts">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>

	<location path="styles">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>
</configuration>